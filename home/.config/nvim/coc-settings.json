{
  "eslint.autoFixOnSave": true,
  // "eslint.probe": ["javascript","javascriptreact","typescript","typescriptreact","vue", "graphql"],
  // "coc.preferences.colorSupport": true,
  // "coc.preferences.formatOnSaveFiletypes": [
  //   "css",
  //   "json",
  //   "html",
  //   "rust",
  //   "python",
  //   "sql",
  //   "markdown"
  // ],
  "coc.preferences.formatOnSave": true,
  "stylelintplus.autoFixOnSave": true,
  "json.format.enable": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tsserver.disableAutomaticTypeAcquisition": false,
  "suggest.triggerCompletionWait": 50,
  "javascript.suggestionActions.enabled": false,
  "Lua.workspace.library": [
    "${3rd}/OpenResty/library"
  ],
  "Lua.runtime.version": "LuaJIT",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--ignore=E402,F841,F401,E302,E305,W503"
  ],
  "python.formatting.provider": "black",
  "graphql.filetypes": [
    "graphql"
  ],
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": [
        "server",
        "-m",
        "stream"
      ],
      // customize filetypes to your needs
      "filetypes": [
        "graphql"
      ],
      "trace.server": "verbose"
      // "settings": {
      //   "graphql-config.load.legacy": false
      // }
    }
  }
}
