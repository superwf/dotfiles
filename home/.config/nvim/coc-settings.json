{
  "eslint.autoFixOnSave": true,
  "eslint.debug": true,
  "eslint.experimental.useFlatConfig": true,
  // "eslint.probe": ["javascript","javascriptreact","typescript","typescriptreact","vue", "graphql"],
  "colors.enable": false,
  "highlight.colors.enable": false,
  "coc.preferences.formatOnSave": true,
  "stylelintplus.autoFixOnSave": true,
  "json.format.enable": true,
  // "css.validate": false,
  // "scss.validate": false,
  // "less.validate": false,
  // "wxss.validate": false,
  "tsserver.disableAutomaticTypeAcquisition": false,
  "tsserver.useLocalTsdk": true,
  "typescript.format.enable": false,
  "suggest.triggerCompletionWait": 50,
  "javascript.suggestionActions.enabled": false,
  "workspace.workspaceFolderCheckCwd": true,
  "Lua.workspace.library": [
    "${3rd}/OpenResty/library"
  ],
  "Lua.runtime.version": "LuaJIT",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--ignore=E402,F841,F401,E302,E305,W503"
  ],
  "python.formatting.provider": "black",
  "[less][css]": {
    "coc.preferences.formatOnSave": true
  },
